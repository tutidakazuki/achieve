<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <%= notice %>

    <h1>お問い合わせ内容を入力してください</h1>

      <%= form_for(@contact, url: confirm_contacts_path) do |f| %>
        <% if @contact.errors.any? %>
        <h3><%= @contact.errors.count %>件エラーがあります。</h3>
    
        <ul>
        <% @contact.errors.full_messages.each do |msg| %>
        
            <li><%= msg %></li>
        <% end %>
        </ul>
      <% end %>
      

      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.label :メールアドレス %>
      <%= f.text_field :email, class: 'form-control' %>
      <br>
      <%= f.label :内容 %>
      <%= f.text_field :content, class: 'form-control' %>
      <br>
      <%= f.submit "確認画面へ", class: 'btn btn-primary btn-block' %>
    <% end %>

  </div>
</div>